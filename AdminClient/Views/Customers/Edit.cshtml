@model AdminClient.Models.Customer.EditCustomerViewModel

@{
    ViewData["Title"] = "Edit";
}
<div class="card">
    <div class="card-header">
        <h1>Edit Customer</h1>
    </div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name">Customer Name</label>
                <input class="form-control" asp-for="Name"/>
                <span asp-validation-for="Name" class="field-validation-error text-danger"></span>
            </div>
            <button type="submit" class="btn">Save</button>
        </form>
    </div>
</div>
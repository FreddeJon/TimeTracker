@model AdminClient.Models.Project.CreateProjectViewModel 

@{
    ViewData["Title"] = "Create Project";
}
<div class="card">
    <div class="card-header">
        <h1>Create a new project for @Model.CustomerName</h1>
    </div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProjectName">Project Name</label>
                <input class="form-control" asp-for="ProjectName"/>
                <span asp-validation-for="ProjectName" class="field-validation-error text-danger"></span>
            </div>
            <button type="submit" class="btn">Save</button>
        </form>
    </div>
</div>